doctype html 
html(lang=ru)
	head
		title New Sails App
		meta(name='viewport', content='width=device-width', initial-scale=1, maximum-scale=1)
		<!--STYLES-->
		link(rel='stylesheet', href='/styles/importer.css')
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/bootstrap-responsive.css')
		<!--STYLES END-->
		<!--SCRIPTS-->
		script(src='/js/dependencies/sails.io.js')
		script(src='/js/jquery.js')
		script(src='/js/jquery.validate.min.js')
		script(src='/js/customValidate.js')
		<!--SCRIPTS END-->
	body
		.navbar.navbar-inverse.navbar-fixed-top
			.navbar-inner
				.container
					a.btn.btn-navbar.collapsed(data-toggle='collapse' data-target='.nav-collapse')
						img(src='/images/glyphicons-517-menu-hamburger.png')
					a.brand(href='#') Dirty chat
					.container(style='vertical-align: top;')
						- if (!session.authenticated) {
						form.form-inline(action='/session/create' method='POST' style="float: right;")
							//- h4.form-signin-heading Войти
							- if (flash && flash.err) {
							ul
								- Object.keys(flash.err).forEach(function(error) {
								- var errMsg = JSON.stringify(flash.err[error]);
								- console.log(errMsg);
								li= errMsg
								- })
							- }
							input.input-small(type='text', name='email' id='email', placeholder='email@example.ru')
							input.input-small(type='password', name='password' id='password', placeholder='Password')
							input.btn(type='submit', value='Войти')
							input(type='hidden' name='_csrf' value= _csrf)
						-} else {
							a(href='/session/destroy') Выйти
						-};
					.nav-collapse.collapse(style='height: 0px;')
						ul.nav
							li.active Пользователи
								a(href='/user')
							li 2
							li 3
		.container-fluid
			.row-fluid
				#main.span9
					block content
				#side.span3
					block adm_menu
